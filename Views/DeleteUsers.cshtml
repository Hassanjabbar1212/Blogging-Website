@model User1
<form asp-action="DeleteUser" asp-controller="User">
    <div class="form-group">
        <label asp-for="FristName">First Name:</label>
        <input asp-for="FristName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">LastName:</label>
        <input asp-for="LastName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" id="email" class="form-control" />
        <span id="emailError" style="color: red;"></span><br>
    </div>
    <div class="form-group">
        <label asp-for="Address">Address:</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImagePath">ImagePath</label>
        <input asp-for="ImagePath" class="form-control" />
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
