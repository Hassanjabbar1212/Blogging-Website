@model List<User1>
<nav class="navbar navbar-expand-lg navbar-light bg-secondary border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Blogging Website</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse w-100 d-flex justify-content-between">
            <ul class="navbar-nav">
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <form class="d-flex" action="/User/Search" method="get">
                        <input type="text" name="search" placeholder="Search..." class="form-control me-2">
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</nav>
<table class="table table-bordered table-striped " style="width:100%">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email 
            </th>
            <th>
                Adress
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.FristName
                    </td>
                    <td>
                        @item.LastName
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Address
                    </td>
                    <td role="group">
                        <a asp-action="EditUsers" asp-controller="User" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i> Edit
                        </a>

                        <a asp-action="DeleteUsers" asp-controller="User" asp-route-id="@item.Id">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <p>No users found.</p>
        }


    </tbody>

</table>